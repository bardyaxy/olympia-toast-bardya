{
  "name": "olympia-BCB-bardya",
  "version": "1.0.0",
  "description": "Simple build step for HTML includes",
  "scripts": {
    "build:assets": "webpack --config webpack.config.js",
    "build": "npm run build:assets && ts-node scripts/build.ts",
    "build:eleventy": "eleventy",
    "serve": "ts-node scripts/serve.ts",
    "format": "prettier --write \"**/*.{js,ts,css,html}\"",
    "lint": "eslint \"**/*.{js,ts}\" --max-warnings 0",
    "watch": "ts-node scripts/watch.ts",
    "test": "node --require ts-node/register --test test/build.test.ts test/integration.test.ts"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "ejs": "^3.1.9",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.1",
    "@11ty/eleventy-plugin-ejs": "^1.0.0",
    "@eslint/js": "^8.53.0",
    "@types/ejs": "^3.1.5",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "chokidar": "^3.6.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.53.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  }
}
